/* collector files create the following lists of intermediary files:
 *
 *	object_files	.o's
 *	depend_files	all dependency files except for those implied
 *			by object_files.
 * generated_headers	header files created by some code generator,
 *			e.g. bison. An entry here causes the appropriate
 *			.dd file to be added, so no entry in depend_files
 *			should be made.
 */

loop v = [supported_variants] {
  if [count [defined-or-null files_under_./[v]]] then {
    do_u_v = [do]/[unix]/[v];

    bat_scripts = [match_mask %0%[bat_suffix] [files_under_./[v]]];
    bat_includes = [match_mask %0%[bat_include_suffix] [files_under_./[v]]];

    bat_binaries_[v] = [fromto %0%[bat_suffix] %0[do_u_v]/%[bat_suffix] [bat_scripts]];

    depend_files += [fromto %0%[bat_suffix] %0[do_u_v]/%[bat_suffix][dep_suffix] [bat_scripts]]
                    [fromto %0%[bat_include_suffix] %0[do_u_v]/%[bat_include_suffix][dep_suffix] [bat_includes]];
  }
}
