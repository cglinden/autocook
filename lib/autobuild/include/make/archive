/* The following initializes the directory lists for specific targets */
/* The presence of an entry here makes the "make <target>" legal      */

[set-variant-value target_list_for_archive];

/* The following variables control the generation of global depends   */
generate_src_depend_for_archive = 1;
generate_lib_depend_for_archive = 1;

/* This function transforms a directory into the actual build target  */
function make_target_archive /* dir */ =
{
  return [fromto %0%/ %0%/[do]/[unix]/[@2]/archive/[lib_prefix]%[lib_suffix] [@1]];
}

/* This function returns the object used by others to link against    */
function make_linkto_archive /* dir */ =
{
  return [fromto %0%/ %0%/[do]/[unix]/[@2]/archive/[lib_prefix]%[lib_suffix] [@1]];
}

/* This function returns the object used by lint to varify against    */
function make_lint_target_archive /* dir */ =
{
  return [fromto %0%/ %0%/[do]/[unix]/[@2]/archive/[lib_prefix]%[lints_suffix] [@1]];
}

/* This function returns the object used by others to link against    */
function make_libdep_archive /* dir */ =
{
  return [fromto %0%/ 
                 %0%/[do]/[unix]/[@2]/[lib_prefix]%[lib_suffix][libdep_suffix] [@1]];
}
