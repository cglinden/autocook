/*==============================================================*
 *								*
 *	Localize settings to a subdirectory			*
 *								*
 *==============================================================*/

%0[do]/Howto.cook: %0Howto.cook
    [build]/helper/customize
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_2/customize
    [cookbook]
  set silent nodefault unlink mkdir
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

cd [pwd];
[echo] "'    Customize:  '" %0Howto.cook"' -> ("[thread-id]")'";

[perl] [build]/helper/customize %0Howto.cook\\
    -indythirdparty "'[indy3party]'"\\
    -thirdparty "'[thirdparty]'"\\
    -customized_in %0"'[do]/Howto.cook'"\\
    -target [target]\\
    -dir %0\\
    -o [target];
dataend
  [run-build-script [target]];
}

;
