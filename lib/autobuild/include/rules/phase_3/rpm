/*==============================================================*
 *								*
 *	Create include dependency cascades			*
 *								*
 *==============================================================*/

/*--- depend from original RPM spec file ---------------------*/
%0[do]/[unix]/%9/%[spec_suffix][dep_suffix]:: %0%[spec_suffix]:
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_3/rpm
    [cookbook]
    [build]/include/functions/get-local-value
    [build]/include/functions/combine
    [get use_dependency %9 %0]
    [get-local-value customized_in %0]
  set /* time-adjust-back */ silent nocascade unlink mkdir
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace spec_I_flags %9 %0]

cd [pwd];
[echo] "'    Depend:     '" %0%[spec_suffix] "'-> ("[thread-id]")'";

[c_incl] -nc -ns -nrec -ali -asi\\
  [get spec_I_flags %9 %0]\\
  -prefix "'cascade-for "%0%[spec_suffix]" = "[target]"'"\\
  -suffix "';'"\\
  -o [target]\\
  %0%[spec_suffix];
dataend
  [run-build-script [target]];
}

/*--- depend from original RPM spec file include --------------*/
%0[do]/[unix]/%9/%[spec_include_suffix][dep_suffix]:: %0%[spec_include_suffix]:
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_3/rpm
    [cookbook]
    [build]/include/functions/get-local-value
    [build]/include/functions/combine
    [get use_dependency %9 %0]
    [get-local-value customized_in %0]
  set /* time-adjust-back */ silent nocascade unlink mkdir
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace spec_I_flags %9 %0]

cd [pwd];
[echo] "'    Depend:     '" %0%[spec_include_suffix] "'-> ("[thread-id]")'";

[c_incl] -nc -ns -nrec -ali -asi\\
  [get spec_I_flags %9 %0]\\
  -prefix "'cascade-for "%0%[spec_include_suffix]" = "[target]"'"\\
  -suffix "';'"\\
  -o [target]\\
  %0%[spec_include_suffix];
dataend
  [run-build-script [target]];
}

;
