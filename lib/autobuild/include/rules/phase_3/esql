/*==============================================================*
 *								*
 *	use esql						*
 *								*
 *==============================================================*/

/*--- run the preprocessor to create derived C++ sources -------*/
%0[do]/[unix]/%9/%[cpp_suffix]: %0%[esql_suffix]:
    /* Uncomment next line if a change here should trigger rebuilds */
    /* [build]/include/rules/phase_3/esql */
    [cookbook]
    [build]/include/functions/get-local-value
    [build]/include/functions/combine
    [get use_dependency %9 %0]
    [combine [get-local-value customized_in_%0]]
  set /* time-adjust-back */ silent unlink
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace pre_esql %9 %0]
[trace esql %9 %0]
[trace cpp_I_flags %9 %0]
[trace esql_I_flags %9 %0]

cd [pwd];
[echo] '"    ESQL-C:     "' %0%[esql_suffix] "'-> ("[thread-id]")'";

[get pre_esql %9 %0] [get esql %9 %0]\\
  'code='cpp 'cpp_suffix='[cpp_suffix]\\
  [subst -I 'include=' [get cpp_I_flags %9 %0]]\\
  [get esql_I_flags %9 %0]\\
  'iname='%0%[esql_suffix]\\
  'oname='[target];
dataend
  [run-build-script [target]];
}

;
