/*==============================================================*
 *								*
 *	use flex						*
 *								*
 *==============================================================*/

/*--- build lexer using token definitions of the parser --------*/

%0[do]/[unix]/%9/[flex_prefix]%[c_suffix]: %0%[flex_suffix]
    %0[do]/[unix]/%9/%[bison_infix][h_suffix]
    [build]/include/functions/get-local-value
    [build]/include/functions/combine
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_3/flex
    [build]/include/defs/flex
    [cookbook]
    [get use_dependency %9 %0]
    [get-local-value customized_in %0]
  set /* time-adjust-back */ silent nodefault unlink
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace flex %9 %0]
[trace flex_flags %9 %0]

cd [pwd];
[echo] '"    Flex:       "' %0%[flex_suffix] "'-> ("[thread-id]")'";

[get flex %9 %0] -P%\\
  [get flex_flags %9 %0]\\
  -o[target]\\
  %0%[flex_suffix];
dataend
  [run-build-script [target]];
}

;
