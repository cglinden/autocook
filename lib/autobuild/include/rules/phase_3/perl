/*==============================================================*
 *								*
 *	Create include dependency cascades			*
 *								*
 *==============================================================*/

/*--- depend from perl script ----------------------------------*/
%0[do]/[unix]/%9/%[pl_suffix][dep_suffix]:: %0%[pl_suffix]:
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_3/perl
    [build]/helper/depend/perl
    [cookbook]
    [build]/include/functions/get-local-value
    [build]/include/functions/combine
    [get use_dependency %9 %0]
    [get-local-value customized_in %0]
  set /* time-adjust-back */ silent nocascade unlink mkdir
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace perl_I_flags %9 %0]

cd [pwd];
[echo] "'    Depend:     '" %0%[pl_suffix] "'-> ("[thread-id]")'";

[perl] [build]/helper/depend/perl\\
  [get perl_I_flags %9 %0]\\
  -prefix "'cascade-for "%0%[pl_suffix]" = "[target]"'"\\
  -suffix "';'"\\
  -o [target]\\
  %0%[pl_suffix];
dataend
  [run-build-script [target]];
}

/*--- depend from perl module ----------------------------------*/
