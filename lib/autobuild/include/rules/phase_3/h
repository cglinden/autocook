/*==============================================================*
 *								*
 *	Create include dependency cascades			*
 *								*
 *==============================================================*/

/*--- depend from original header ------------------------------*/
%0[do]/[unix]/%9/%[h_suffix][dep_suffix]:: %0%[h_suffix]:
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_3/h
    [cookbook]
    [build]/include/functions/get-local-value
    [build]/include/functions/combine
    [get use_dependency %9 %0]
    [get-local-value customized_in %0]
  set silent nocascade unlink mkdir
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace cc_I_flags %9 %0]

cd [pwd];
[echo] "'    Depend:     '" %0%[h_suffix] "'-> ("[thread-id]")'";

[c_incl] -nc -ns -nrec -ali -asi\\
  [get cc_I_flags %9 %0]\\
  [addprefix -U [generated_headers_%9]]\\
  -prefix "'cascade-for "%0%[h_suffix]" = "[target]"'"\\
  -suffix "';'"\\
  -o [target]\\
  %0%[h_suffix];
dataend
  [run-build-script [target]];
}

/*--- depend from derived header -------------------------------*/
%0[do]/[unix]/%9/%[h_suffix][ddep_suffix]:: %0[do]/[unix]/%9/%[h_suffix]
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_3/h
    [cookbook]
    [build]/include/functions/get-local-value
    [build]/include/functions/combine
    [get use_dependency %9 %0]
    [get-local-value customized_in %0]
  set silent unlink mkdir
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace cc_I_flags %9 %0]

cd [pwd];
[echo] "'    Depend:     '" %0[do]/[unix]/%9/%[h_suffix] "'-> ("[thread-id]")'";

[c_incl] -nc -ns -nrec -ali -asi\\
  [get cc_I_flags %9 %0]\\
  [addprefix -U [generated_headers_%9]]\\
  -prefix "'cascade-for "%0%[h_suffix]" = '"\\
  -suffix "';'"\\
  -o [target]\\
  %0[do]/[unix]/%9/%[h_suffix];
[echo] "'cascade-for "%0%[h_suffix]" = "%0"[do]/[unix]/%9/"%[h_suffix]";'" >> [target];
dataend
  [run-build-script [target]];
}

;
