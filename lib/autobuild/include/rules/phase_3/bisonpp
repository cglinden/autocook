/*==============================================================*
 *								*
 *	use bison++						*
 *								*
 *==============================================================*/

/*--- build parser and interface header file from bison source -*/
%0[do]/[unix]/%9/%[bison_infix][cpp_suffix]
%0[do]/[unix]/%9/%[bison_infix][hpp_suffix]: %0%[bisonpp_suffix]
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_3/bisonpp
    [build]/include/defs/bison
    [cookbook]
    [build]/include/functions/get-local-value
    [build]/include/functions/combine
    [get use_dependency %9 %0]
    [get-local-value customized_in %0]
  set /* time-adjust-back */ silent unlink mkdir
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace bisonpp %9 %0]
[trace bison_flags %9 %0]

cd [pwd];
[echo] '"    Bison++:    "' %0%[bisonpp_suffix] "'-> ("[thread-id]")'";
[get bisonpp %9 %0] -d -p%\\
  [get bison_flags %9 %0]\\
  -o%0[do]/[unix]/%9/%[bison_infix][cpp_suffix]\\
  %0%[bisonpp_suffix];
dataend
  [run-build-script [target]];
}

;
