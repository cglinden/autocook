/*==============================================================*
 *								*
 *	Simple shared object					*
 *								*
 *==============================================================*/

/*--- create archive (dynamic) ---------------------------------*/
%7/%0%/[do]/[unix]/%9/dumb_so/[lib_prefix]%[so_suffix]:: [object_files_for_%7/%0%/%9]:
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_6/dumb_so
    [build]/include/defs/ld
    [cookbook]
    [get use_unpack %9 %7/%0%/]
    [get use_dependency %9 %0]
    [build]/include/functions/get-local-value
    [build]/include/functions/combine
    %7/%0%/[do]/[unix]/%9/[lib_prefix]%[so_suffix][libdep_suffix]
    [get-local-value customized_in %7/%0%/]
  set mkdir silent ingredients-fingerprint
  if [in [target_in_%7/%0%/%9] dumb_so]
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace ld %9 %7/%0%/]
[trace [get ld %9 %7/%0%/] %9 %7/%0%/]
[trace ld_flags %9 %7/%0%/]
[trace post_ld_temp %9 %7/%0%/]
[trace post_ld %9 %7/%0%/]
[trace post_ld_flags %9 %7/%0%/]

cd [pwd];

[echo] "'    Dumb so:    '" %7/%0%/[do]/[unix]/%9/"'*'"[obj_suffix] "'-> ("[thread-id]")'";

[rm] [runtime]/lib/[lib_prefix]%[so_suffix];
[get [get ld %9 %7/%0%/] %9 %7/%0%/]\\
  [get ld_flags   %9 %7/%0%/]\\
  -o [target][get post_ld_temp %9 %7/%0%/]\\
  [defined-or-null object_files_for_%7/%0%/%9]\\
&& [get post_ld %9 %7/%0%/] [get post_ld_flags %9 %7/%0%/] [target]
dataend
  [run-build-script [target]];
}

;
