/*==============================================================*
 *								*
 *	Spawn off a sub-build  					*
 *								*
 *==============================================================*/

/*--- call the sub-build script after making a copy ------------*/
%0[do]/[unix]/%9/[sub_build_log]: [source_files_for_%0%9]
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_6/sub_build
    [build]/include/build.sh
    [cookbook]
    [get use_unpack %9 %0]
    [get use_dependency %9 %0]
    [build]/include/functions/get-local-value
    [get-local-value customized_in %0]
  set mkdir silent unlink ingredients-fingerprint
  if [and [in [target_in_%0%9] sub_build] [count [files_under_%0%9]]]
  single-thread sub_build
{
#include [build]/include/rules/store-prerequisites
  [cat] >[target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[echo] "'    Sub-Build:  '" %0[sub_build_script] "'-> ("[thread-id]")'";
 
( cd %0 && env COOK_platform\=[unix]\\
               COOK_variant\=%9\\
               COOK_test\=false\\
               COOK_top\=[pwd]\\
               [sh] [sub_build_script] [defined-or-null sub_build] )\\
     > [target]\\
  || ([cat] [target]  >&2 \; [rm] [target] \; exit 1)
test -r [target] && [date] >> [target];
dataend
  [run-build-script [target]];
}

/*--- call the sub-build script after making a copy ------------*/
%0[do]/[unix]/%9/[sub_build_test]: [source_files_for_%0%9]
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_6/sub_build
    [build]/include/build.sh
    [cookbook]
    [get use_unpack %9 %0]
    [get use_dependency %9 %0]
    [build]/include/functions/get-local-value
    [get-local-value customized_in %0]
  set mkdir silent unlink ingredients-fingerprint
  if [and [in [target_in_%0%9] sub_build] [count [files_under_%0%9]]]
  single-thread sub_build
{
#include [build]/include/rules/store-prerequisites
  [cat] >[target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[echo] "'    Sub-Build:  '" %0[sub_build_script] "'-> ("[thread-id]")'";
 
( cd %0 && env COOK_platform\=[unix]\\
               COOK_variant\=%9\\
               COOK_test\=true\\
               COOK_top\=[pwd]\\
               [sh] [sub_build_script] [defined-or-null sub_build] )\\
     > [target]\\
  || ([sed] "'s/^    //'" [target] >&2 \; exit 1)
[date] >> [target];
dataend
  [run-build-script [target]];
}

; /* make sure all recipes are instantiated now */
