/*==============================================================*
 *								*
 *	"compile" shell scripts					*
 *								*
 *==============================================================*/

/*--- original shell script ------------------------------------*/
[skip_prefix]%0[do]/[unix]/%9/sh/%[bin_suffix]:: [skip_prefix]%0%[sh_suffix]:
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_6/sh
    [build]/helper/compiler/sh
    [build]/include/defs/sh
    [cookbook]
    [build]/include/functions/get-local-value
    [build]/include/functions/combine
    [get use_dependency %9 %0]
    [get use_unpack %9 %0]
    [get-local-value customized_in [skip_prefix]%0]
  set mkdir silent unlink ingredients-fingerprint
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace sh_preproc %9 [skip_prefix]%0]
[trace sh_I_flags %9 [skip_prefix]%0]
[trace sh_D_flags %9 [skip_prefix]%0]

cd [pwd];

[echo] "'    Shellscript:'" [skip_prefix]%0%[sh_suffix] "'-> ("[thread-id]")'";

[rm] [runtime]/bin/%[bin_suffix];
[get sh_preproc %9 [skip_prefix]%0]\\
  [build]/helper/compiler/sh\\
  [get sh_I_flags %9 [skip_prefix]%0]\\
  [get sh_D_flags %9 [skip_prefix]%0]\\
  [skip_prefix]%0%[sh_suffix]\\
  [match_mask [skip_prefix]%%0%%[sh_include_suffix] [need]]\\
 > [target]\\
&& chmod +x [target]\\
&& [get shc %9 [skip_prefix]%0] [target]\\
&& [ln] [do]/[unix]/%9/sh/%[bin_suffix] [skip_prefix]%0%-[thread-id][bin_suffix]\\
&& mv -f [skip_prefix]%0%-[thread-id][bin_suffix] [skip_prefix]%0%[bin_suffix]
dataend
  [run-build-script [target]];
}

/*--- generated shell script -----------------------------------------*/
[skip_prefix]%0[do]/[unix]/%9/sh/%[bin_suffix]:: [skip_prefix]%0[do]/[unix]/%9/%[sh_suffix]:
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_6/sh
    [build]/include/defs/sh
    [build]/helper/compiler/sh
    [cookbook]
    [build]/include/functions/get-local-value
    [build]/include/functions/combine
    [get use_dependency %9 %0]
    [get use_unpack %9 %0]
    [get-local-value customized_in [skip_prefix]%0]
  set mkdir silent unlink ingredients-fingerprint
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace sh_preproc %9 [skip_prefix]%0]
[trace sh_I_flags %9 [skip_prefix]%0]
[trace sh_D_flags %9 [skip_prefix]%0]

[echo] "'    Shellscript:'" [skip_prefix]%0[do]/[unix]/%9/%[sh_suffix] "'-> ("[thread-id]")'";

cd [pwd];

[get sh_preproc %9 [skip_prefix]%0]\\
  [build]/helper/compiler/sh\\
  [get sh_I_flags %9 [skip_prefix]%0]\\
  [get sh_D_flags %9 [skip_prefix]%0]\\
  [skip_prefix]%0[do]/[unix]/%9/%[sh_suffix]\\
  [match_mask [skip_prefix]%%0%%[sh_include_suffix] [need]]\\
 > [target]\\
&& [get shc %9 [skip_prefix]%0] [target]\\
&& chmod +x [target]\\
&& [ln] [do]/[unix]/%9/sh/%[bin_suffix] [skip_prefix]%0%-[thread-id][bin_suffix]\\
&& mv -f [skip_prefix]%0%-[thread-id][bin_suffix] [skip_prefix]%0%[bin_suffix]
dataend
  [run-build-script [target]];
}

;
