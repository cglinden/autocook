 *	maven sub-build						*
 *								*
 *==============================================================*/

/*--- maven ----------------------------------------------------*/
[skip_prefix]%0[do]/[unix]/%9/maven/[maven_install_log]:: [source_files_for_[skip_prefix]%0%9]:
    /* Uncomment next line if a change here should trigger rebuilds */
    [do]/maven/settings.xml
    [build]/include/rules/phase_6/maven
    [build]/include/defs/maven
    [cookbook]
    [get use_dependency %9 [skip_prefix]%0]
    [get use_unpack %9 [skip_prefix]%0]
    [get-local-value customized_in [skip_prefix]%0]
  set mkdir silent unlink ingredients-fingerprint
  if [in [target_in_[skip_prefix]%0%9] maven]
  single-thread maven
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace maven %9 [skip_prefix]%0]
[trace maven_deploy_platform %9 [skip_prefix]%0]
[trace maven_flags %9 [skip_prefix]%0]

cd [pwd];

#if test x'"$BUILDLOOP_User"' = x; then
if true; then
  target=install
  profile=
elif test [unix] = [get maven_deploy_platform %9 [skip_prefix]%0]; then
  target="'idea:module deploy'"
  profile=-Pbuildloop
else
  profile=
  target=install
fi

[echo] '"    mvn $target:"' [skip_prefix]%0[pom_file] "'-> ("[thread-id]")'"

cd [skip_prefix]%0\\
&& [get maven %9 [skip_prefix]%0]\\
   [get maven_flags %9 [skip_prefix]%0]\\
   $profile $target\\
 > [do]/[unix]/%9/maven/[maven_install_log]\\
|| ([cat] [do]/[unix]/%9/maven/[maven_install_log] >&2; [rm] [do]/[unix]/%9/maven/[maven_compile_log]; exit 1)
dataend
  [run-build-script [target]];
}

/*--- maven ----------------------------------------------------*/
[skip_prefix]%0[do]/[unix]/%9/maven/[maven_compile_log]:: [source_files_for_[skip_prefix]%0%9]:
    /* Uncomment next line if a change here should trigger rebuilds */
    [do]/maven/settings.xml
    [build]/include/rules/phase_6/maven
    [build]/include/defs/maven
    [cookbook]
    [get use_dependency %9 [skip_prefix]%0]
    [get use_unpack %9 [skip_prefix]%0]
    [get-local-value customized_in [skip_prefix]%0]
  set mkdir silent unlink ingredients-fingerprint
  if [in [target_in_[skip_prefix]%0%9] maven]
  single-thread maven
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace maven %9 [skip_prefix]%0]
[trace maven_flags %9 [skip_prefix]%0]

cd [pwd];

[echo] "'    mvn compile:'" [skip_prefix]%0[pom_file] "'-> ("[thread-id]")'";

cd [skip_prefix]%0\\
&& [get maven %9 [skip_prefix]%0]\\
   [get maven_flags %9 [skip_prefix]%0]\\
   clean compile\\
 > [do]/[unix]/%9/maven/[maven_compile_log]\\
|| ([cat] [do]/[unix]/%9/maven/[maven_compile_log] >&2; [rm] [do]/[unix]/%9/maven/[maven_compile_log]; exit 1)
dataend
  [run-build-script [target]];
}

[do]/maven/settings.xml: make/settings.xml [build]/include/rules/phase_6/maven
  set silent mkdir nodefault
  if [not [exists src/java/settings.xml]]
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[echo] '"    Maven conf: "' make/settings.xml
sed -e '"s:%TOP%:'[pwd]':g"'\\
  make/settings.xml > [target]
dataend
  [run-build-script [target]];
}

[do]/maven/settings.xml: src/java/settings.xml [build]/include/rules/phase_6/maven
  set silent mkdir nodefault
  if [exists src/java/settings.xml]
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[echo] '"    Maven conf: "' src/java/settings.xml
sed -e '"s:%TOP%:'[pwd]':g"'\\
  src/java/settings.xml > [target]
dataend
  [run-build-script [target]];
}


;
