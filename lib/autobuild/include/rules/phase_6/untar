/*==============================================================*
 *                                                              *
 *      Unpack stuff                                            *
 *                                                              *
 *==============================================================*/


[thirdparty]/%/[dummy]: [thirdparty]/%[tar_suffix]
  /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_6/untar
    set silent mkdir /* time-adjust-back */
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

cd [pwd];
[echo] '"    Unpacking:   "'[thirdparty]/%[tar_suffix] "'-> ("[thread-id]")'";

for entry in `ls -1d "'"[thirdparty]"/%/'"* 2>/dev/null`
do
  case '"$entry"' in
  [target][why_suffix])  true ;;
  [target][need_suffix]) true ;;
  [target][how_suffix])  true ;;
  [target][error_suffix])  true ;;
  *) [rmdir] '"$entry"' ;;
  esac
done

cd [thirdparty]\\
&& [tar_extract] %[tar_suffix] > %[tar_suffix].output\\
&& [mv] %[tar_suffix].output %/[dummy]\\
&& [date] >> %/[dummy];
dataend
  [run-build-script [target]];
}

