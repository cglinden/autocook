/*==============================================================*
 *								*
 *	Archive stuff						*
 *								*
 *==============================================================*/

/*--- create archive (linkto object for complex exes) ----------*/
%0%/[do]/[unix]/%9/complex/[lib_prefix]%[lib_suffix]::
    [stringset [object_files_for_%0%/%9]
      - %0%/[do]/[unix]/%9/[main][obj_suffix]
        %0%/[do]/[unix]/%9/%[obj_suffix]]:
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_6/archive
    [build]/include/defs/ar
    [cookbook]
    [get use_unpack %9 %0%/]
    [get use_dependency %9 %0]
    [build]/include/functions/get-local-value
    [build]/include/functions/combine
    %0%/[do]/[unix]/%9/[lib_prefix]%[lib_suffix][libdep_suffix]
    [get-local-value customized_in %0%/]
  set mkdir silent ingredients-fingerprint
  if [in [target_in_%0%/%9] complex]
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace ar %9 %0%/]
[trace ar_flags %9 %0%/]

cd [pwd];

[echo] "'    Archive (b):'" %0%/[do]/[unix]/%9/"'*'"[obj_suffix] "'-> ("[thread-id]")'";

[get ar %9 %0%/] [get ar_flags %9 %0%/] [target]\\
      [stringset [object_files_for_%0%/%9] - %0%/[do]/[unix]/%9/%[obj_suffix]]
dataend
  [run-build-script [target]];
}

/*--- create archive (ordinary) --------------------------------*/
%0%/[do]/[unix]/%9/archive/[lib_prefix]%[lib_suffix]::
    [object_files_for_%0%/%9]:
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_6/archive
    [build]/include/defs/ar
    [cookbook]
    [get use_unpack %9 %0%/]
    [get use_dependency %9 %0]
    [build]/include/functions/get-local-value
    [build]/include/functions/combine
    %0%/[do]/[unix]/%9/[lib_prefix]%[lib_suffix][libdep_suffix]
    [get-local-value customized_in %0%/]
  set silent mkdir ingredients-fingerprint
  if [in [target_in_%0%/%9] archive]
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace ar %9 %0%/]
[trace ar_flags %9 %0%/]

cd [pwd];

[echo] "'    Archive (l):'" %0%/[do]/[unix]/%9/"'*'"[obj_suffix] "'-> ("[thread-id]")'";

[get ar %9 %0%/] [get ar_flags %9 %0%/] [target]\\
     [object_files_for_%0%/%9]
dataend
  [run-build-script [target]];
}

; /* make sure all recipes are instantiated now */
