 *==============================================================*/

%7/%0[do]/[unix]/%9/simplex/%[bin_suffix]:: %7/%0[do]/[unix]/%9/%[obj_suffix]:
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_6/simplex
    [build]/include/defs/ld
    [cookbook]
    [get use_unpack %9 %7/%0]
    [get use_dependency %9 %0]
    [build]/include/functions/get-local-value
    [build]/include/functions/combine
    [build]/include/functions/make-L-l-flags
    [get thirdparty_deps %9 %7/%0]
    [get external_obj    %9 %7/%0]
    [get linkto          %9 %7/%0%/]
    [get external_lib    %9 %7/%0]
    [get-local-value customized_in %7/%0]
    [combine [inherited_external_obj_%7/%0%/%9]]
    [combine [inherited_external_lib_%7/%0%/%9]]
    %7/%0[do]/[unix]/%9/%[bin_suffix][tsort_suffix]
  set mkdir silent unlink
  if [in [target_in_%7/%0%9] simplex]
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace pre_ld %9 %7/%0]
[trace ld %9 %7/%0]
[trace [get ld %9 %7/%0] %9 %7/%0]
[trace ld_flags %9 %7/%0]
[trace ld_L_flags %9 %7/%0]
[trace ld_l_flags %9 %7/%0]
[trace post_ld_temp %9 %7/%0]
[trace external_obj %9 %7/%0]
[trace make-ld-flags-function %9 %7/%0]
[trace make-L-l-flags-function %9 %7/%0]
[trace external_lib %9 %7/%0]
# inherited_external_obj_%7/%0%/%9 = [trace-combination [inherited_external_obj_%7/%0%/%9]]
# inherited_external_lib_%7/%0%/%9 = [trace-combination [inherited_external_lib_%7/%0%/%9]]
# inherited_ld_L_flags_%7/%0%/%9 = [trace-combination [inherited_ld_L_flags_%7/%0%/%9]]
# inherited_ld_l_flags_%7/%0%/%9 = [trace-combination [inherited_ld_l_flags_%7/%0%/%9]]
[trace post_ld %9 %7/%0]
[trace post_ld_flags %9 %7/%0]

cd [pwd];

[echo] "'    Simple Exe: '" %7/%0[do]/[unix]/%9/%[obj_suffix] "'-> ("[thread-id]")'";

[rm] [runtime]/bin/%[bin_suffix];
[get pre_ld %9 %7/%0]\\
 [get [get ld %9 %7/%0] %9 %7/%0]\\
  [get ld_flags %9 %7/%0]\\
  [get ld_L_flags %9 %7/%0]\\
  [combine [inherited_ld_L_flags_%7/%0%/%9]]\\
  -o [target][get post_ld_temp %9 %7/%0]\\
  %7/%0[do]/[unix]/%9/%[obj_suffix]\\
  [get external_obj %9 %7/%0]\\
  [inherited_external_obj_%7/%0%/%9]\\
  [[get make-ld-flags-function %9 %7/%0] %7/%0% %9]\\
  [[get make-L-l-flags-function %9 %7/%0] [linkto_%7/%0%/%9] [get external_lib %9 %7/%0] [combine [inherited_external_lib_%7/%0%/%9]]]\\
  [get ld_l_flags %9 %7/%0]\\
  [combine [inherited_ld_l_flags_%7/%0%/%9]]\\
  [ld_system_l_flags]\\
&& [get post_ld %9 %7/%0%/] [get post_ld_flags %9 %7/%0] [target]\\
&& [ln] [do]/[unix]/%9/simplex/%[bin_suffix] %7/%0%-[thread-id][bin_suffix]\\
&& mv -f %7/%0%-[thread-id][bin_suffix] %7/%0%[bin_suffix]\\
|| ([rm] [target] [skip_prefix]%0%[bin_suffix] && exit 1);
dataend
  [run-build-script [target]];
}

;
