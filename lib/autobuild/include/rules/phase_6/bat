/*==============================================================*
 *								*
 *	"compile" BAT scripts					*
 *								*
 *==============================================================*/

/*--- original BAT script ------------------------------------*/
[skip_prefix]%0[do]/[unix]/%9/bat/%[bat_suffix]:: [skip_prefix]%0%[bat_suffix]:
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_6/bat
    [build]/helper/compiler/bat
    [build]/include/defs/bat
    [cookbook]
    [build]/include/functions/get-local-value
    [build]/include/functions/combine
    [get use_dependency %9 %0]
    [get-local-value customized_in [skip_prefix]%0]
  set mkdir silent unlink ingredients-fingerprint
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace bat_preproc %9 [skip_prefix]%0]
[trace bat_I_flags %9 [skip_prefix]%0]
[trace bat_D_flags %9 [skip_prefix]%0]

cd [pwd];

[echo] "'    BAT file:   '" [skip_prefix]%0%[bat_suffix] "'-> ("[thread-id]")'";

[rm] [runtime]/bin/%[bin_suffix];
[get bat_preproc %9 [skip_prefix]%0]\\
  [build]/helper/compiler/bat\\
  [get bat_I_flags %9 [skip_prefix]%0]\\
  [get bat_D_flags %9 [skip_prefix]%0]\\
  [skip_prefix]%0%[bat_suffix]\\
  [match_mask [skip_prefix]%%0%%[bat_include_suffix] [need]]\\
 > [target]\\
&& chmod +x [target]
dataend
  [run-build-script [target]];
}

/*--- generated BAT script -----------------------------------------*/
[skip_prefix]%0[do]/[unix]/%9/bat/%[bat_suffix]:: [skip_prefix]%0[do]/[unix]/%9/%[bat_suffix]:
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_6/bat
    [build]/include/defs/bat
    [build]/helper/compiler/bat
    [cookbook]
    [build]/include/functions/get-local-value
    [build]/include/functions/combine
    [get use_dependency %9 %0]
    [get-local-value customized_in [skip_prefix]%0]
  set mkdir silent unlink ingredients-fingerprint
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace bat_preproc %9 [skip_prefix]%0]
[trace bat_I_flags %9 [skip_prefix]%0]
[trace bat_D_flags %9 [skip_prefix]%0]

cd [pwd];

[echo] "'    BAT File:   '" [skip_prefix]%0[do]/[unix]/%9/%[bat_suffix] "'-> ("[thread-id]")'";

[get bat_preproc %9 [skip_prefix]%0]\\
  [build]/helper/compiler/bat\\
  [get bat_I_flags %9 [skip_prefix]%0]\\
  [get bat_D_flags %9 [skip_prefix]%0]\\
  [skip_prefix]%0[do]/[unix]/%9/%[bat_suffix]\\
  [match_mask [skip_prefix]%%0%%[bat_include_suffix] [need]]\\
 > [target]\\
&& chmod +x [target]
dataend
  [run-build-script [target]];
}

;
