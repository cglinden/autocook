/*==============================================================*
 *								*
 *	"compile" perl scripts					*
 *								*
 *==============================================================*/

/*--- perl script ----------------------------------------------*/
[skip_prefix]%0[do]/[unix]/%9/perl/%[bin_suffix]:: [skip_prefix]%0%[pl_suffix]:
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_6/perl
    [build]/include/defs/perl
    [build]/helper/compiler/perl
    [build]/helper/compiler/parse-perl-errors
    [cookbook]
    [get use_dependency %9 %0]
    [build]/include/functions/get-local-value
    [build]/include/functions/combine
    [defined-or-warn [get perldeps %9 [skip_prefix]%0]]
    [get-local-value customized_in [skip_prefix]%0]
  set mkdir silent unlink ingredients-fingerprint
  if [in [target_in_[skip_prefix]%0%9] perl]
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace perldeps %9 [skip_prefix]%0]
[trace pre_perlc %9 [skip_prefix]%0]
[trace perlc %9 [skip_prefix]%0]
[trace perl_flags %9 [skip_prefix]%0]
[trace perl_I_flags %9 [skip_prefix]%0]
[trace perl_D_flags %9 [skip_prefix]%0]

cd [pwd];

[echo] "'    Perl Script:'" [skip_prefix]%0%[pl_suffix] "'-> ("[thread-id]")'";

[get pre_perlc %9 [skip_prefix]%0] [get perlc %9 [skip_prefix]%0]\\
  [get perl_flags %9 [skip_prefix]%0]\\
  [get perl_I_flags %9 [skip_prefix]%0]\\
  [skip_prefix]%0%[pl_suffix] 2>[target].errors\\
&& [sed] -f [build]/helper/compiler/parse-perl-errors [target].errors >&2\\
&& [perl] [build]/helper/compiler/perl\\
  [skip_prefix]%0%[pl_suffix]\\
  [get perlc_flags %9 [skip_prefix]%0]\\
  [get perl_I_flags %9 [skip_prefix]%0]\\
  [get perl_D_flags %9 [skip_prefix]%0]\\
  -DVARIANT\=%9\\
  [match_mask [skip_prefix]%%0%%[pm_suffix] [need]]\\
 > [target]\\
&& chmod +x [target]\\
&& [ln] [do]/[unix]/%9/perl/%[bin_suffix] [skip_prefix]%0%-[thread-id][bin_suffix]\\
&& mv -f [skip_prefix]%0%-[thread-id][bin_suffix] [skip_prefix]%0%[bin_suffix]\\
|| ([rm] [target] [skip_prefix]%0%[bin_suffix]\\
    && [sed] -f [build]/helper/parse-perl-errors [target].errors >&2\; exit 1);
dataend
  [run-build-script [target]];
}

/*--- perl module ----------------------------------------------*/
[skip_prefix]%0[do]/[unix]/%9/perl/%[pm_suffix]:: [skip_prefix]%0%[pm_suffix]:
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_6/perl
    [build]/include/defs/perl
    [build]/helper/compiler/perl
    [build]/helper/compiler/parse-perl-errors
    [cookbook]
    [get use_dependency %9 %0]
    [build]/include/functions/get-local-value
    [build]/include/functions/combine
    [defined-or-warn [get perldeps %9 [skip_prefix]%0]]
    [get-local-value customized_in [skip_prefix]%0]
  set mkdir silent unlink ingredients-fingerprint
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace perldeps %9 [skip_prefix]%0]
[trace pre_perlc %9 [skip_prefix]%0]
[trace perlc %9 [skip_prefix]%0]
[trace perl_flags %9 [skip_prefix]%0]
[trace perl_I_flags %9 [skip_prefix]%0]
[trace perl_D_flags %9 [skip_prefix]%0]

cd [pwd];

[echo] "'    Perl Script:'" [skip_prefix]%0%[pm_suffix] "'-> ("[thread-id]")'";

[get pre_perlc %9 [skip_prefix]%0] [get perlc %9 [skip_prefix]%0]\\
  [get perl_flags %9 [skip_prefix]%0]\\
  [get perl_I_flags %9 [skip_prefix]%0]\\
  [skip_prefix]%0%[pm_suffix] 2>[target].errors\\
&& [sed] -f [build]/helper/compiler/parse-perl-errors [target].errors >&2\\
&& [perl] [build]/helper/compiler/perl\\
  [skip_prefix]%0%[pm_suffix]\\
  [get perlc_flags %9 [skip_prefix]%0]\\
  [get perl_I_flags %9 [skip_prefix]%0]\\
  [get perl_D_flags %9 [skip_prefix]%0]\\
  -DVARIANT\=%9\\
  [match_mask [skip_prefix]%%0%%[pm_suffix] [need]]\\
 > [target]\\
|| ([rm] [target]\\
    && [sed] -f [build]/helper/parse-perl-errors [target].errors >&2\; exit 1);
dataend
  [run-build-script [target]];
}

/*--- derived perl script ----------------------------------------------------------*/
[skip_prefix]%0[do]/[unix]/%9/perl/%[bin_suffix]:: [skip_prefix]%0[do]/[unix]/%9/%[pl_suffix]:
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_6/perl
    [build]/include/defs/perl
    [build]/helper/compiler/perl
    [build]/helper/compiler/parse-perl-errors
    [cookbook]
    [get use_dependency %9 %0]
    [defined-or-warn [get perldeps %9 [skip_prefix]%0]]
    [build]/include/functions/get-local-value
    [build]/include/functions/combine
    [get-local-value customized_in [skip_prefix]%0]
  set mkdir silent unlink ingredients-fingerprint
  if [in [target_in_[skip_prefix]%0%9] perl]
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace perldeps %9 [skip_prefix]%0]
[trace pre_perlc %9 [skip_prefix]%0]
[trace perlc %9 [skip_prefix]%0]
[trace perl_flags %9 [skip_prefix]%0]
[trace perl_I_flags %9 [skip_prefix]%0]
[trace perl_D_flags %9 [skip_prefix]%0]

[echo] "'    Perl Script:'" [skip_prefix]%0[do]/[unix]/%9/%[pl_suffix] "'-> ("[thread-id]")'";

[get pre_perlc %9 [skip_prefix]%0] [get perlc %9 [skip_prefix]%0]\\
  [get perl_flags %9 [skip_prefix]%0]\\
  [get perl_I_flags %9 [skip_prefix]%0]\\
  [skip_prefix]%0[do]/[unix]/%9/%[pl_suffix] 2>[target].errors\\
&& [sed] -f [build]/helper/compiler/parse-perl-errors [target].errors >&2\\
&& [perl] [build]/helper/compiler/perl\\
  [skip_prefix]%0[do]/[unix]/%9/%[pl_suffix]\\
  [get perlc_flags %9 [skip_prefix]%0]\\
  [get perl_I_flags %9 [skip_prefix]%0]\\
  [get perl_D_flags %9 [skip_prefix]%0]\\
  [match_mask [skip_prefix]%%0%%[pm_suffix] [need]]\\
 > [target]\\
&& chmod +x [target]\\
&& [ln] [do]/[unix]/%9/perl/%[bin_suffix] [skip_prefix]%0%-[thread-id][bin_suffix]\\
&& mv -f [skip_prefix]%0%-[thread-id][bin_suffix] [skip_prefix]%0%[bin_suffix]\\
|| ([rm] [target] [skip_prefix]%0%[bin_suffix]\\
    && [sed] -f [build]/helper/parse-perl-errors [target].errors >&2\; exit 1);
dataend
  [run-build-script [target]];
}

;
