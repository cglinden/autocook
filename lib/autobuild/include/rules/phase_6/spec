/*==============================================================*
 *								*
 *	"compile" RPM spec files				*
 *								*
 *==============================================================*/

[skip_prefix]%0[do]/[unix]/%9/spec/%[spec_suffix]:: [skip_prefix]%0%[spec_suffix]:
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_6/spec
    [build]/include/defs/spec
    [build]/helper/compiler/sh
    [cookbook]
    [build]/include/functions/get-local-value
    [build]/include/functions/combine
    [get use_dependency %9 %0]
    [get use_unpack %9 %0]
    [get-local-value customized_in [skip_prefix]%0]
  set mkdir silent unlink ingredients-fingerprint
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace spec_preproc %9 [skip_prefix]%0]
[trace spec_I_flags %9 [skip_prefix]%0]
[trace spec_D_flags %9 [skip_prefix]%0]

cd [pwd];

[echo] "'    Spec file:  '" [skip_prefix]%0%[spec_suffix] "'-> ("[thread-id]")'";

[rm] [runtime]/bin/%[bin_suffix];
[get spec_preproc %9 [skip_prefix]%0]\\
  [build]/helper/compiler/sh\\
  [get spec_I_flags %9 [skip_prefix]%0]\\
  [get spec_D_flags %9 [skip_prefix]%0]\\
  [skip_prefix]%0%[spec_suffix]\\
  [match_mask [skip_prefix]%%0%%[spec_include_suffix] [need]]\\
 > [target]\\
|| ([rm] [target]\; exit 1);
dataend
  [run-build-script [target]];
}

;
