/*==============================================================*
 *								*
 *	Generate file manifest					*
 *								*
 *==============================================================*/

%0[do]/%8/Whatto.cook: [collect [perl] [build]/helper/manifest [do]/%8 Whatto.cook \'%0\' dirs_only]
    [build]/helper/manifest
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_1/manifest
    [cookbook]
  set /* time-adjust-back */ mkdir silent nodefault unlink ingredients-fingerprint
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

cd [pwd];
[echo] "'    Manifest:    ...'""' -> ("[thread-id]")'";

test -r test_diskspace && . test_diskspace

[perl] [build]/helper/manifest\\
  [do]/%8\\
  Whatto.cook\\
  \'%0\'\\
  0\\
  [supported_variants]\\
  > [target];
dataend
  [run-build-script [target]];
}
