/*==============================================================*
 *								*
 *	Create library link dependencies  			*
 *								*
 *==============================================================*/

/*--- link dependency for test suites --------------------------*/
%0[do]/[unix]/%9/%[bin_suffix][bindep_suffix]: [depend_files_for_%0%9]
    [build]/helper/depend/lib
    /* Uncomment next line if a change here should trigger rebuilds */
    /* [build]/include/rules/phase_4/bindepend */
    [cookbook]
    [build]/include/functions/get-local-value
    [build]/include/functions/combine
    [get use_dependency %9 %0]
    [get-local-value customized_in %0]
  set ingredients-fingerprint silent nocascade nounlink mkdir
  if [in [target_in_%0%9] test]
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace external_lib %9 %0]

cd [pwd];
[echo] "'    Test-Depend:'" %0[do]/[unix]/%9/"'*'"[dep_suffix] "'-> ("[thread-id]")'";

[perl] [build]/helper/depend/lib\\
  -lib_preamble "'"[build_target_for_%0%9]":" [get external_lib %9 %0]"'"\\
  -dep_preamble "'"[build_target_for_%0%9][tsort_suffix]":'"\\
  -suffix "';'"\\
  -dep_suffix [libdep_suffix]\\
  [addprefix '-linkto ' [linkto_targets_%9]]\\
  -o [target]\\
  [depend_files_for_%0%9];
dataend
  [run-build-script [target]];
}

/*--- link dependency for executables --------------------------*/
%0[do]/[unix]/%9/%[bin_suffix][bindep_suffix]: %0[do]/[unix]/%9/%[dep_suffix]:
    [build]/helper/depend/lib
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_4/bindepend
    [cookbook]
    [build]/include/functions/get-local-value
    [build]/include/functions/combine
    [get use_dependency %9 %0]
    [get-local-value customized_in %0]
  set ingredients-fingerprint silent nocascade nounlink mkdir
  if [in [target_in_%0%9] complex simplex]
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace external_lib %9 %0]

cd [pwd];
[echo] "'    Bin-Depend: '" %0[do]/[unix]/%9/%[dep_suffix] "'-> ("[thread-id]")'";

[perl] [build]/helper/depend/lib\\
  -lib_preamble "'"%0[do]/[unix]/%9/[target_in_%0%9]/%[bin_suffix]":" [get external_lib %9 %0]"'"\\
  -dep_preamble "'"%0[do]/[unix]/%9/%[bin_suffix][tsort_suffix]":'"\\
  -suffix "';'"\\
  -dep_suffix [libdep_suffix]\\
  [addprefix '-linkto ' [linkto_targets_%9]]\\
  -o [target]\\
  %0[do]/[unix]/%9/%[dep_suffix];
dataend
  [run-build-script [target]];
}

/*--- link dependency for non-executables ----------------------*/
%0[do]/[unix]/%9/%[bindep_suffix]: [depend_files_for_%0%9]:
    [build]/helper/depend/lib
    /* Uncomment next line if a change here should trigger rebuilds */
    [build]/include/rules/phase_4/bindepend
    [cookbook]
    [build]/include/functions/get-local-value
    [get use_dependency %9 %0]
    [get-local-value customized_in %0]
  set ingredients-fingerprint silent nocascade nounlink mkdir
  if [not [in [target_in_%0%9] complex simplex test]]
{
#include [build]/include/rules/store-prerequisites
  [cat] > [target][how_suffix];
data
#!/bin/sh

# Script generated by rule defined in:
# [__FILE__]\:[__LINE__]

[trace external_lib %9 %0]

cd [pwd];
[echo] "'    So-Depend:  '" %0[do]/[unix]/%9/"'*'"[dep_suffix] "'-> ("[thread-id]")'";

[perl] [build]/helper/depend/lib\\
  -lib_preamble "'"[linkto_target_for_%0%9]":" [get external_lib %9 %0]"'"\\
  -dep_preamble "'"[fromto %%0%%[bindep_suffix] %%0%%[tsort_suffix] [target]]":'"\\
  -suffix "';'"\\
  -dep_suffix [libdep_suffix]\\
  [addprefix '-linkto ' [stringset [linkto_targets_%9] - [linkto_target_for_%0%9]]]\\
  -o [target]\\
  [depend_files_for_%0%9];
dataend
  [run-build-script [target]];
}

; /* make sure all recipes are instantiated now */
