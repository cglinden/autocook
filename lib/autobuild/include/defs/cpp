/* list of items modifiable via a "use" or "make" module */
cumulative_parameters += cpp_D_flags cpp_I_flags cpp_flags;
once_only_parameters  += pre_cpp cpp ld cpp_default_I_flags;

/* global defaults
 *
 * PLEASE do not add things here unless you are really REALLY sure you want these
 * settings to be valid EVERYWHERE. Consider make a "use xyz;" module instead.
 * Check out make/cook/include/use/rt_build_flags as an example on now to do this!
 */

pre_cpp =;
cpp = ADD [__FILE__]':'[__LINE__] false; /* catch bad settings or variants */
default_cpp = /usr/bin/g++;
cpp_default_I_flags = ;

loop v = [supported_variants] {
  cpp_D_flags_[v] = ADD [__FILE__]':'[__LINE__] -DOBJDIR\=[do]/[unix]/[v];
}

default_cpp_I_flags = ADD [__FILE__]':'[__LINE__] [collect [build]/helper/get_system_include_flags [do] [default_cpp]];

loop v = debug optimized {
  loop p = [supported_platforms] {
    cpp_[p]_[v] = ADD [__FILE__]':'[__LINE__] /usr/bin/g++;
    cpp_default_I_flags_[p]_[v] = ADD [__FILE__]':'[__LINE__] [default_cpp_I_flags];
  }
}

cpp_flags_debug     = ADD [__FILE__]':'[__LINE__] -O0;
cpp_flags_optimized = ADD [__FILE__]':'[__LINE__] -O3;
