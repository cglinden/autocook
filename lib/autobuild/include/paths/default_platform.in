/*--- Basics ------------------------------------------------*/
awk = /bin/awk;     
c_incl = @bindir@/c_incl;
cat = /bin/cat;
cd = cd;
chmod = /bin/chmod; 
cp = /bin/cp -f;       
date = /bin/date;
echo = [sync]/bin/echo;   
extract = /usr/bin/tail -20;
find = /bin/find;   
grep = /bin/grep;   
ln = /bin/ln -sf;    
lorder = /bin/lorder;
ls = /bin/ls;       
mkdir = /bin/mkdir -p; 
mv = /bin/mv;       
pkgmk = /bin/pkgmk;
pkgtrans = /bin/pkgtrans;
rm = /bin/rm -f;
rmdir = /bin/rm -rf;
sed = /bin/sed;     
sh = /bin/sh;  
sleep = /bin/sleep; 
tar_extract = /bin/tar xvfmz;
tee = /bin/tee;
touch = /bin/touch; 
tsort = /usr/bin/tsort;
ungrep = /bin/grep -v;
xmllint = /usr/bin/xmllint;

perl          = @PERL@; /* command to invoke the perl interpreter */
sh	      = @SH@; /* command to invoke the bourne shell */
ksh	      = /bin/ksh; /* command to invoke the corn shell */
csh	      = /bin/csh; /* command to invoke the c shell */

null_device = /dev/null; /* /dev/null - which isn't always /dev/null */
